{
  "manifest_version": 3,
  "name": "Hershield",
  "version": "1.0",
  "description": "Capture online harassment comments for ShieldHer",
  
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "https://*.twitter.com/*",
    "https://*.x.com/*",
    "https://facebook.com/*",
    "https://www.facebook.com/*",
    "https://*.facebook.com/*",
    "https://instagram.com/*",
    "https://www.instagram.com/*",
    "https://*.instagram.com/*",
    "https://tiktok.com/*",
    "https://www.tiktok.com/*",
    "https://*.tiktok.com/*",
    "https://reddit.com/*",
    "https://www.reddit.com/*",
    "https://*.reddit.com/*",
    "https://youtube.com/*",
    "https://www.youtube.com/*",
    "https://*.youtube.com/*",
    "https://linkedin.com/*",
    "https://www.linkedin.com/*",
    "https://*.linkedin.com/*",
    "https://tumblr.com/*",
    "https://*.tumblr.com/*",
    "https://pinterest.com/*",
    "https://*.pinterest.com/*",
    "https://snapchat.com/*",
    "https://*.snapchat.com/*",
    "https://discord.com/*",
    "https://*.discord.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*",
        "https://facebook.com/*",
        "https://www.facebook.com/*",
        "https://instagram.com/*",
        "https://www.instagram.com/*",
        "https://tiktok.com/*",
        "https://www.tiktok.com/*",
        "https://reddit.com/*",
        "https://www.reddit.com/*",
        "https://youtube.com/*",
        "https://www.youtube.com/*",
        "https://linkedin.com/*",
        "https://www.linkedin.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Hershield - Capture harassment comments"
  },
  "background": {
    "service_worker": "background.js"
  }
}